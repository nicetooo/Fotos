{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$APP_DATA/**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "opener:allow-reveal-item-in-dir",
      "allow": [
        {
          "path": "$APP_DATA/**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    "dialog:default",
    "core:path:default"
  ]
}